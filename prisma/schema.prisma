datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id           String @id @default(cuid())
  fatherName   String
  fatherNumber String
  roomNo       String
  hostelName   String
  user         User   @relation(fields: [userId], references: [id])
  userId       String @unique
}

model User {
  id            String    @id @default(cuid())
  name          String?
  collegeId     String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role
  password      String
  createdAt     DateTime  @default(now())
  profile       Profile?
}

enum Role {
  STUDENT
  PARENT
  WARDEN
  SYSADMIN
  DSW
}
